# --- NextAuth / App URLs ---
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="replace-with-strong-random-value"

# --- Database / Prisma ---
DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/DATABASE_NAME"
# Set this to your direct connection string if required (e.g. Supabase); otherwise match DATABASE_URL.
DIRECT_URL="postgresql://USER:PASSWORD@HOST:5432/DATABASE_NAME"

# --- Twitch OAuth / Broadcaster ---
TWITCH_CLIENT_ID="your-twitch-app-client-id"
TWITCH_CLIENT_SECRET="your-twitch-app-client-secret"
TWITCH_BROADCASTER_ID="your-twitch-user-id"

# Secret used to verify incoming EventSub notifications from Twitch
TWITCH_WEBHOOK_SECRET="your-eventsub-secret"

# Legacy admin token for the classic /admin page (keep defined even if you primarily use Auth.js sessions)
ADMIN_TOKEN="set-a-local-admin-token"
